<% @professionals.each do |p| %>
 <p>
  <strong>Nombre:</strong>
  <%= p.name %>
</p>
<p>
  <strong>Email:</strong>
  <%= p.email %>
</p>


<% if !p.positions.blank? %>
<p>
<strong>Cargos en sucursales:</strong>
<ul>
  <% p.position_users.each do |pu| %>
    <li><%= "#{pu.position.name} en la sucursal: #{pu.branch.name}" %></li>
  <% end %>
</ul>
<strong>Cargos en la pagina:</strong>
<ul>
  <% p.roles.each do |role| %>
    <li><%= role.name %></li>
  <% end %>
</ul>
</p>
<% end %>
<% end %>
