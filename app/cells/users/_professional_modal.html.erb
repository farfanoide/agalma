<div id="<%= "userModal#{professional.id}" %>" class="reveal-modal medium" data-reveal>
  <section class="media">
  <div class="img">
    <%= image_tag professional.avatar.url %>
  </div>
  <div class="bd">
    <p> <strong>Nombre:</strong> <%= professional.name %> </p>
    <p> <strong>Email:</strong> <%= professional.email %> </p>

    <% if !professional.positions.blank? %>
      <ul>
        <% professional.position_users.each do |pu| %>
          <li><%= "#{pu.position.name} en la sucursal: #{pu.branch.name}" %></li>
        <% end %>
      </ul>
    <% end %>
    </p>
  </div>
  </section>
  <a class="close-reveal-modal">&#215;</a>
</div>
