<div class="box">
  <div class="box-header"> <h3 class="box-title">Cargos:</h3> </div>
  <div class="box-body">
    <% if !@positions.blank? %>
      <table class="table table-condensed">
      <tbody>
      <tr>
        <th>Cargo</th>
        <th>Acciones</th>
      </tr>
      <% @positions.each do |position| %>
        <tr>
        <td><%= position.name %> </td>
        <td class="table-actions">
          <%= link_to fa_icon(:edit), edit_backend_position_path(position), class: 'btn btn-success  btn-sm' %>
          <%= link_to fa_icon('trash-o'), backend_position_path(position), method: :delete, data: {confirm: 'Esta seguro?'}, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
      </tbody>
    </table>
  <% else %>
      <div class="alert alert-info">
      <%= fa_icon :info %>
      <p>Todavia ha creado Cargos, puede comenzar <%= link_to 'aqui.', new_backend_position_path %> </p>
    </div>
  <% end %>
  </div> <!-- /.box-body -->
</div>
<br>
<%= link_to 'Nuevo Cargo', new_backend_position_path, class: 'btn btn-primary' %>
