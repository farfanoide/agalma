<header class="header">
  <a href="<%= url_for :root %>" class="logo">
    <%= image_tag "logo_hh_inv.png", class: :logo %>
  </a>
  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top" role="navigation">
    <!-- Sidebar toggle button-->
    <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a>
    <div class="navbar-right">
      <ul class="nav navbar-nav">
        <!-- User Account: style can be found in dropdown.less -->
        <li class="dropdown user user-menu">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <%= fa_icon :user %>
          <span><%= current_user.full_name %><i class="caret"></i></span>
        </a>
        <ul class="dropdown-menu">
          <!-- User image -->
          <li class="user-header bg-light-blue">
          <%= image_tag current_user.avatar.url, class: 'img-circle' %>
          <p>
          <!-- TODO: add job to users -->
          </p>
          </li>
          <!-- Menu Footer-->
          <li class="user-footer">
          <div class="pull-left">
            <%= link_to "Perfil", edit_backend_user_path(current_user), class: "btn btn-default btn-flat" %>
          </div>
          <div class="pull-right">
            <%= link_to('Cerrar Sesion', destroy_user_session_path, class: "btn btn-default btn-flat", :method => :delete ) %>
          </div>
          </li>
        </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>
