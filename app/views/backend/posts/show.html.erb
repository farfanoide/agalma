<p>
  <strong>Titulo:</strong>
  <%= @post.title %>
</p>
<p>
  <%= @post.description %>
</p>

<p>
  <strong>Contenido</strong>
  <%= raw(@post.content) %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', :back %> |
<%= link_to 'Destroy', backend_post_path(@post), method: :delete, data: { confirm: 'Esta seguro?' } %>
