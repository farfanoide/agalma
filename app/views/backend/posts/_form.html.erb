<%= simple_form_for([:backend, @post]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content, :as => :ckeditor %>
    <%= f.association :branch, as: :select, include_blank: false%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
