<div class="box box-warning">
  <div class="box-header">
    <h3 class="box-title"><%= link_to "Noticias", backend_posts_path %></h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <% if @posts.empty? %>
    <div class="alert alert-info alert-dismissable">
      <i class="fa fa-info"></i>
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      Todavia no tiene noticias cargadas.  <%= link_to "Crear noticia", new_backend_post_path, class: 'button'%>
    </div>
    <% else %>
    <table class="table table-condensed">
      <tbody>
      <% for post in @posts %>
      <tr>
        <td><%= link_to post.title, edit_backend_post_path(post) %></td>
      </tr>
      <% end %>
    </tbody></table>
    <% end %>
  </div><!-- /.box-body -->
</div>
