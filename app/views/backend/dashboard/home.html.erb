<% if user_signed_in? %>
 <% if policy(current_user).admin? %>	
 <div class="row">
<div class="row">
  <div class="small-12 large-4 columns">
    <ul class="items-container">
      <h2>Sucursales</h2>
      <% for branch in @branches %>
      <li><%= link_to branch.name, edit_backend_branch_path(branch) %></li>
      <% end %>
    </ul>
  </div>
  <div class="small-12 large-4 columns">
    <h2>Usuarios</h2>
    <ul class="items-container">
      <% for role in @roles %>
      <li><%= role.user.name %>(<%= role.role.name %>)</li>
      <% end %></ul>
    </div>
</div>
      <% end %>
 <% end %>
