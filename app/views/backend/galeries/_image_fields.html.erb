<fieldset>
<% if f.object.new_record? %>
  <%= f.input :file_name, label: 'Imagen' %>
  <%= f.input :name, label: 'Nombre de imagen'  %>
  <%= f.hidden_field :_destroy %>
  <%= link_to "Borrar", '#', class: "remove_fields" %>
<% else %>
    <%= image_tag f.object.file_name.url(:thumb) %>
  <%= f.input :name, label: 'Nombre de imagen' %>
  <%= f.hidden_field :_destroy %>
  <%= link_to "Borrar", '#', class: "remove_fields" %>
<% end %>
</fieldset>