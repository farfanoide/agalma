<%= simple_form_for([:backend, @user], defaults: {input_html:{class: 'form-control'}}) do |f| %>
  <%if current_user == @user %>
  <div class="form-group">
<%= f.input :name, placeholder: "Nombre de Usuario", label: "Nombre" %>
  </div>
  <div class="form-group">
<%= f.input :email, placeholder: "Email del Usuario", label: "Email" %><br>
</div>
<% else %>
  <%= f.object.name %><br>
  <%= f.object.email %>
<% end %>
<% if current_user.admin? %>
  <%= f.input :admin, label: "Administrador" %>
<% end %>

<%= f.simple_fields_for(:rolifications) do |rolif| %>
  <%= render 'rolification_fields', f: rolif %>
<% end %>
<%= link_to_add_fields '+ agregar rol', f, :rolifications %>
<br>
<br>

<%= f.submit "Guardar", class: 'btn btn-primary' %>
<% end %>

