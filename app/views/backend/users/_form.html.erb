<%= simple_form_for([:backend, @user]) do |f| %>

<%= f.input :name, placeholder: "nombre para el usuario", label: "nombre" %>
<%= f.input :email, placeholder: "informacion extra", label: "email" %><br>
<%= f.simple_fields_for(:rolifications) do |rolif| %>
  <%= render 'rolification_fields', f: rolif %>
<% end %>
<%= link_to_add_fields 'agregar rol', f, :rolifications %>
<br>

<%= f.submit "Guardar" %>
<% end %>

