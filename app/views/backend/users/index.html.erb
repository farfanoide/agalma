<div class="box">
  <div class="box-header"> <h3 class="box-title">Usuarios:</h3> </div>
  <div class="box-body">
    <% if !@users.blank? %>
    <table class="table table-condensed">
      <tbody>
      <tr>
        <th>Usuario</th>
        <th>Acciones</th>
      </tr>
      <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, edit_backend_user_path(user) %> </td>
        <td class="table-actions">
          <%= link_to fa_icon(:eye), backend_user_path(user), class: 'btn btn-primary btn-sm' %>
          <% if policy(current_user).admin? %>
            <%= link_to fa_icon(:edit), edit_backend_user_path(user), class: 'btn btn-success  btn-sm' %>
            <%= link_to fa_icon('trash-o'), backend_user_path(user), method: :delete, data: {confirm: 'Esta seguro?'}, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </td>
      </tr>
      <% end %>
      </tbody>
    </table>
    <% else %>
    <div class="alert alert-info">
      <%= fa_icon :info %>
      <p>Todavia ha creado Usuarios, puede comenzar <%= link_to 'aqui.', new_backend_user_path %> </p>
    </div>
    <% end %>
  </div> <!-- /.box-body -->
</div>
<br>
<%= link_to 'Nuevo Usuario', new_backend_user_path, class: 'btn btn-primary' %>
