<%= simple_form_for([:backend, @page], defaults: {input_html: {class: 'form-control'}}) do |f| %>
  <%= f.error_notification %>
<div class="form-group">
  <%= f.input :title %>
</div>
<div class="form-group">
  <%= f.input :active, as: :boolean, label: 'pagina activa' %>
</div>
<div class="form-group">
  <%= f.input :body, :as => :ckeditor %>
</div>
<div class="form-group">
  <%= f.association :widgets, label: "widgets", label_method: :name, include_blank: true, as: :check_boxes%>
</div>

<div class="form-group">
<% if @page.general?  %>
  <%= f.association :menu, collection: Menu.general, as: :radio_buttons %>
<% else %>
  <%= render 'child_page_fields', f: f  %>
<% end %>
</div>

<div class="form-actions">
  <%= f.button :submit, 'Guardar', class: 'btn btn-primary' %>
</div>
<% end %>
