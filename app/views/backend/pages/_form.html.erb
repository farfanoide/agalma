<%= simple_form_for([:backend, @page], defaults: {input_html: {class: 'form-control'}}) do |f| %>
  <%= f.error_notification %>
  <div class="form-group">
    <%= f.input :title %>
  </div>
  <div class="form-group">
    <%= f.input :body, :as => :ckeditor %>
  </div>
  <div class="form-group">
  <%= f.simple_fields_for(:directions) do |tel| %>
    <%= render 'direction_fields', f: tel %>
  <% end %>
  <%= link_to_add_fields '+ agregar sucursal', f, :directions %>
      <%# <%= f.association :branches, label: "Sedes", label_method: :name, include_blank: false %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, 'Guardar', class: 'btn btn-primary' %>
  </div>
<% end %>
