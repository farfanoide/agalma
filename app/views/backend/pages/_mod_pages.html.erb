<div class="box box-success">
  <div class="box-header">
    <h3 class="box-title"><%= link_to "Paginas", backend_pages_path %></h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <% if @pages.empty? %>
    <div class="alert alert-info alert-dismissable">
      <i class="fa fa-info"></i>
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      Todavia no tiene paginas cargadas.  <%= link_to "Crear Pagina", new_backend_page_path, class: 'button'%>
    </div>
    <% else %>
    <table class="table table-condensed">
      <tbody>
      <% @pages.each do |page| %>
      <tr>
        <td><%= link_to page.title, edit_backend_page_path(page) %></td>
      </tr>
      <% end %>
    </tbody></table>
    <% end %>
  </div><!-- /.box-body -->
</div>
