<h1>Listing pages</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= link_to 'Show', backend_page_path(page) %></td>
        <td><%= link_to 'Edit', edit_backend_page_path(page) %></td>
        <td><%= link_to 'Destroy', backend_page_path(page), method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

