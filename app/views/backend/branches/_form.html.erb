<%= simple_form_for([:backend,@branch]) do |f| %>

<%= f.input :name, placeholder: "nombre para la sucursal", label: "nombre" %>
<%= f.input :description, placeholder: "informacion extra", label: "descripcion" %><br>
<%= f.simple_fields_for(:telephones) do |tel| %>
  <%= render 'telephone_fields', f: tel %>
<% end %>
<%= link_to_add_fields 'agregar telefono', f, :telephones %>
<%= f.simple_fields_for(:rolifications) do |rolif| %>
  <%= render 'rolification_fields', f: rolif %>
<% end %>
<%= link_to_add_fields 'agregar usuario', f, :rolifications %>
<br>

<%= f.submit "Guardar" %>
<% end %>
