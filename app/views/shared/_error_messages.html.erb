<% if @user.errors.any? %>
  <div class="row">
    <div class="small-12 columns" >
      Se encontraron <%= pluralize(@user.errors.count, "Errores") %>
    </div>
    <div class="small-12 columns" >
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li> * <%= msg %> </li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>
