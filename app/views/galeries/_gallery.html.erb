<div class="page-container">
  <div class="post-header">
    <h1 class="post-title"> <%= gallery.name %> </h1>
  </div>
  <section class="gallery-media media">
    <ul class="clearing-thumbs" data-clearing>
      <% images = gallery.images %>
      <% first_img = images.pop %>
      <li> <%= link_to image_tag(first_img.file_name.url(), data: {caption: first_img.description}, class: :img), first_img.file_name.url()  %> </li>
      <% images.each do |img| %>
        <li> <%= link_to image_tag(img.file_name.url(:thumb), data: {caption: img.description}, class: :bd), img.file_name.url, class: :thumb  %> </li>
      <% end %>
    </ul>
  </section>
</div>
