<div class="page-container">
  <div class="post-header">
    <h1 class="post-title"> <%= gallery.name %> </h1>
  </div>
  <section class="gallery-media media">
  <% images = gallery.images %>
  <div class="img">
    <%= link_to image_tag(images.pop.file_name), posts_path() %>
  </div>
  <div class="bd">
    <ul class="clearing-thumbs" data-clearing>
      <% images.each do |img| %>
        <li> <%= link_to image_tag(img.file_name.url(:thumb), data: {caption: img.description}), img.file_name.url, class: :thumb  %> </li>
      <% end %>
    </ul>
  </div>
  </section>
</div>
