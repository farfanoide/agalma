<%= simple_form_for(@galery) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>

    <%= f.simple_fields_for(:images) do |image| %>
    <%= render 'image_fields', f: image %>
    <% end %>
    <%= link_to_add_fields 'agregar imagen', f, :images %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
