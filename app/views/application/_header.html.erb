<div class="header-container">
  <div class="row"> <!-- First row -->
    <div class="small-12 large-6 large-offset-6 columns">
      <div class="top-bar-container hide-for-small-only"> <!-- desktop nav -->
        <nav class="top-bar" >
        <section class="top-bar-section">
        <ul class="links-container">
          <%= nav_link_to '', :root, class: 'home_button item' %>
          <%= render partial: 'top_menu' if @top_menu %>
        </ul>
        </section>
        </nav>
      </div> <!-- end desktop nav -->
      <div class="show-for-small-only">
        <a class="left-off-canvas-toggle" href="#" >Menu</a>
        <%= link_to 'Agalma', :root, class: 'logo' %>
      </div>
    </div>
  </div> <!-- First row close -->
  <div class="row show-for-large-up"> <!-- Second Row -->
    <div class="slider-wrapper">
      <div class="small-12 columns">
        <%= render "slide" %>
      </div>
      <a class="logo"  href="<%= url_for :root %>">Agalma</a>
    </div>
  </div><!-- Sencond Row close -->
  <% if !user_signed_in? %> <!-- Modal -->
    <div id="registration-modal" class="reveal-modal medium" data-reveal>
      <div class="register-modal-wrapper" >
        <div class="row" >
          <div class="small-12 columns">
            <div class="modal-header">
              <%= image_tag 'agalma_logo.png'  %>
            </div>
          </div>
          <div class="small-12 columns" >
            <div class="form-wrapper">
              <%= render 'devise/registrations/new' %>
            </div>
          </div>
          <a class="close-reveal-modal"> &#215 </a>
        </div>
      </div>
    </div>
    <div id="login-modal" class="reveal-modal medium" data-reveal>
      <div class="session-modal-wrapper">
        <div class="row">
          <div class="small-12 large-10 large-offset-2 columns">
            <%= image_tag 'agalma_logo.png'  %>
          </div>
        </div>
        <div class="small-12 large-8 columns" >
          <div class="form-wrapper">
            <%= render 'devise/sessions/new' %>
          </div>
        </div>
        <div class="small-12 large-4 columns register">
          <h3> Registrarse </h3>
          <p> Si usted no tiene una cuenta aun puede crearla aquÃ­. </p>
          <%= link_to('Crear Cuenta', "#", class: "button", data: { "reveal-id" => "registration-modal" } ) %>
        </div>
        <a class="close-reveal-modal"> &#215 </a>
      </div>
    </div>
  </div>
<% end %>
</div>
