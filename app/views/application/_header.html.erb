<div class="header-container">
  <div class="row">
    <div class="small-12 large-8 large-offset-4 columns top-bar-container">
      <nav class="top-bar" data-topbar data-options="custom_back_text: true; back_text: Volver">
        <ul class="title-area">
          <li class="name"> <h1> <a class=""  href="<%= url_for :root %>"><%= image_tag 'home_btn.png'  %></a> </h1> </li>
          <li class="toggle-topbar menu-icon"><a href="#">Menu</a></li>
        </ul>
        <section class="top-bar-section">
          <ul class="links-container">
            <li class="item"><%= link_to "Quiénes Somos", @quienes %></li>
            <li class="item"><a href="#">Galería</a></li>
            <li class="item"><%= link_to "Contacto", new_contact_path %></li>
            <%= render 'devise/menu/login_items' %>
            <% if user_signed_in? %>
              <% if policy(current_user).admin? %>
                <li class="item"><%= link_to "Administrar", [:backend, :root] %></li>
              <% end %>
            <% else %>
              <%= render 'devise/menu/registration_items' %>
              <% end %>
            <li class="has-dropdown pages-dropdown ">
            <a href="#">Paginas</a>
            <ul class="dropdown">
              <%= render 'pages_nav' %>
            </ul>
            </li>
          </ul>
        </section>
      </nav>
    </div>
  </div>
  <div class="row">
    <div class="small-12 large-6 columns">
      <a class="logo"  href="<%= url_for :root %>">Agalma</a>
    </div>
    <div class="small-12 large-6 columns">
      <%= render "slide" %>
    </div>
  </div>

  <% if !user_signed_in? %>
  <div id="registration-modal" class="reveal-modal medium" data-reveal>
    <div class="register-modal-wrapper" >
      <div class="row" >
        <div class="small-12 columns modal-header">
          <%= image_tag 'agalma_logo.png'  %>
        </div>
      </div>
      <div class="small-12 form-wrapper" >
        <%= render 'devise/registrations/new' %>
      </div>
      <a class="close-reveal-modal"> &#215 </a>
    </div>
  </div>

  <div id="login-modal" class="reveal-modal medium" data-reveal>
    <div class="session-modal-wrapper">
      <div class="row">
        <div class="small-12 large-10 large-offset-2 columns">
          <%= image_tag 'agalma_logo.png'  %>
        </div>
      </div>
      <div class="small-12 large-8 columns form-wrapper" >
        <%= render 'devise/sessions/new' %>
      </div>
      <div class="small-12 large-4 columns register">
        <h3> Registrarse </h3>
        <p> Si usted no tiene una cuenta aun puede crearla aquí. </p>
        <%= link_to('Crear Cuenta', "#", class: "button", data: { "reveal-id" => "registration-modal" } ) %>
      </div>

      <a class="close-reveal-modal"> &#215 </a>
    </div>
  </div>
  <% end %>
</div>
