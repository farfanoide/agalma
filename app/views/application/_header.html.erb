<div class="header-container">
  <div class="row"> <!-- First row -->
    <div class="small-12 large-9 large-offset-3 columns">
      <div class="top-bar-container hide-for-small-only"> <!-- desktop nav -->
        <nav class="top-bar" >
        <section class="top-bar-section">
        <ul class="links-container">
          <%= nav_link_to image_tag('home_btn.png'), :root, class: 'home_button' %>
          <%= render partial: 'top_menu' if @top_menu %>
          <%= render 'devise/menu/login_items' %>
          <% if user_signed_in? %>
            <% if policy(current_user).admin? %>
              <%= link_to "Administrar", [:backend, :root], class: 'item' %>
            <% end %>
          <% else %>
            <%= render 'devise/menu/registration_items' %>
          <% end %>
        </ul>
        </section>
        </nav>
      </div> <!-- end desktop nav -->
      <div class="show-for-small-only">
        <a class="left-off-canvas-toggle" href="#" >Menu</a>
        <%= link_to 'Agalma', :root, class: 'logo' %>
      </div>
    </div>
  </div> <!-- First row close -->
  <div class="row show-for-large-up"> <!-- Second Row -->
    <div class="slider-wrapper">
      <div class="small-12 columns">
        <%= link_to image_tag('logo.gif'), :root, class: 'big-logo' %>
        <%= render "slide" %>
      </div>
    </div>
  </div><!-- Sencond Row close -->
  <% if !user_signed_in? %> <!-- Modal -->
    <%= render 'registration_modals' %>
  <% end %>
</div>
