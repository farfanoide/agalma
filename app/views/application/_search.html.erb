<div class="search-container">
  <div class="row">
    <div class="small-12 large-4 columns">
      <div class="row collapse">
        <%= form_tag search_index_path, :method => :get do %>
        <div class="small-8 columns">
          <%= text_field_tag :search,  params[:search], class: :'search-input', placeholder: 'Ingrese su busqueda...' %>
        </div>
        <div class="small-4 columns">
          <!-- TODO: fix mamarrach -->
          <%= submit_tag "BUSCAR", class: :button, :name => nil %>
        </div>
        <% end %>
      </div>
    </div>
    <div class="small-12 large-4 columns" >
      <div class="items-container">
        <%= render 'devise/menu/login_items' %>
        <li class="item"> <b>|</b> </li>
        <% if user_signed_in? %>
        <% if policy(current_user).admin? %>
        <li class="item"><%= link_to "Administrar", [:backend, :root] %></li>
        <% end %>
        <% else %>
        <%= render 'devise/menu/registration_items' %>
        <% end %>
      </div>
    </div>

  </div>
</div>
