<%= simple_form_for(@branch) do |f| %>

<%= f.input :name, placeholder: "nombre", label: "nombre" %>
<%= f.input :description, placeholder: "descripcion", label: "descripcion" %><br>
<%= f.simple_fields_for(:rolifications) do |rolif| %>
<%= rolif.association :user, label: "usuario" %>
<%= rolif.association :role, label: "tipo" %>
<br>
<% end %>

<%= f.submit "Guardar" %>
<% end %>
