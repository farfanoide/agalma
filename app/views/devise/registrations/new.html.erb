<% content_for :title, 'Registro' %>
<div class="registration-wrapper">
  <h2>Registro</h2>
  <div class="small-12 medium-6  medium-centered columns">
    <%= simple_form_for( resource, :as => resource_name, :url => registration_path(resource_name) ) do |f| %>
      <%= render 'shared/error_messages' %>
    <div class="row" >
      <div class="small-3 columns" >
        <%= f.label :name, "Nombre: ", class: "right inline" %> 
      </div>
      
      
      <div class="small-9 columns">
        <%= f.input_field :name, :required => true %>
      </div>
    </div>
    <div class="row" >
      <div class="small-3 columns" >
        <%= f.label :email, "E-mail: ", class: "right inline" %> 
      </div>
      <div class="small-9 columns">
        <%= f.input_field :email, :required => true, :autofocus => true %>
      </div>
    </div>
    <div class="row" >
      <div class="small-3 columns" >
        <%= f.label :password, "Contraseña: ", class: "right inline" %>
      </div>
      <div class="small-9 columns">
        <%= f.input_field :password, :required => true %>
      </div>
    </div>
    <div class="row" >
      <div class="small-3 columns" >
        <%= f.label :password_confirmation, "Confirmar Contraseña", class: "right inline"  %>
      </div>
      <div class="small-9 columns">
        <%= f.input_field :password_confirmation, :required => true %>
      </div>
    </div>
    <div class="row" >
      <div class="small-12 columns">
        <%= f.input :avatar %>
      </div>
    </div>
    <div class="row">
      <div class="small-12 columns">
        <%= f.button :submit, t(:sign_up) %>
      </div>
    </div>
    <% end %>
  </div>
</div>

