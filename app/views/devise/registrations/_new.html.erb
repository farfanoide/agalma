
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>


  <div class="form-inputs">
    <%= f.input :name, label: t(:name), :required => true, :error => false %>
    <%= f.input :email, :required => true, :autofocus => true, :error => false %>
    <%= f.input :password, label: t(:password), :required => true, :error => false, :hint => false %>
    <%= f.input :password_confirmation, label: t(:password_again), :required => true, :error => false %>
  </div>

  <div class="row">
    <div class="small-6 columns">
      <%= f.input :remember_me, :as => :boolean, label: t('Newsetter') %>
    </div>
    <div class="small-6 columns">
      <%= f.button :submit, "Crear Cuenta" %>
    </div>
  </div>
<% end %>



