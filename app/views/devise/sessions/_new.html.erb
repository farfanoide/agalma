<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<div class="form-inputs">
  <div class="row">
    <div class="small-3 columns">
      <%= f.label :email, "Email", class: "right inline", html_options: {autofocus: true} %>
    </div>
    <div class="small-9 columns">
      <%= f.input_field :email, :required => false, :autofocus => true %>
    </div>
  </div>
  <div class="row">
    <div class="small-3 columns">
      <%= f.label :password, "Contraseña", class: "right inline" %>
    </div>
    <div class="small-9 columns">
      <%= f.input_field :password, :required => false, label: t('.password') %>
    </div>
  </div>

</div>

<div class="row">
  <div class="small-6 columns">
    <%= f.input :remember_me, :as => :boolean, label: t('.remember') if devise_mapping.rememberable? %>
  </div>
  <div class="small-6 columns">
    <%= f.button  :submit, "Iniciar Sesion" %>
    <%= link_to "Olvide mi contraseña", new_password_path(resource_name) %><br />
  </div>
</div>
<% end %>
