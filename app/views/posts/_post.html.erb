<div class="page-container">
  <section class="post-container">
    <div class="post-header">
      <h1 class="post-title"> <%= link_to post.title, post_path(post) %> </h1>
    </div>
    <div class="post-main">
      <p> <%=   "#{post.description}..."   %> <%=  link_to("(leer mas)", post_path(post))  %></p>
    </div>
  </section>
</div>
<!-- TODO: tirarle un iconito a esto y hacer q aparezca el texto on hover ;) -->
<% if user_signed_in? and policy(current_user).admin? %>
  <%= link_to("Editar", edit_backend_post_path(post), class: 'button') %>
<% end %>
